    .donation
      .toShow
        button.bmbutton#exit(onclick='closedonate()') x
        h3 Make a Bare Minimum Donation
        form(action='https://www.paypal.com/cgi-bin/webscr', method='post', target='_top')
          input(type='hidden', name='cmd', value='_s-xclick')
          input(type='hidden', name='hosted_button_id', value='VSS9W6QHV8S6C')
          table
            tbody
              tr
                td
                  input(type='hidden', name='on0', value='Contributions')
                  | Contributions
              tr
                td
                  select(name='os0')
                    option(value='Option 1') Option 1 $2.00 USD
                    option(value='Option 2') Option 2 $5.00 USD
                    option(value='Option 3') Option 3 $10.00 USD
                    option(value='Option 4') Option 4 $15.00 USD
                    option(value='Option 5') Option 5 $20.00 USD
                    option(value='Option 6') Option 6 $30.00 USD
                    option(value='Option 7') Option 7 $40.00 USD
                    option(value='Option 8') Option 8 $50.00 USD
                    option(value='Option 9') Option 9 $75.00 USD
                    option(value='Option 10') Option 10 $100.00 USD
              tr
                td
                  input(type='hidden', name='on1', value='Note to Bare Minimum')
                  | Note to Bare Minimum
              tr
                td
                  input(type='text', name='os1', maxlength='200')
          input(type='hidden', name='currency_code', value='USD')
          input(type='image', src='https://www.paypalobjects.com/en_US/i/btn/btn_paynow_SM.gif', border='0', ,style='margin-right:24%' name='submit', alt='PayPal - The safer, easier way to pay online!')
          img(alt='', border='0', src='https://www.paypalobjects.com/en_US/i/scr/pixel.gif', width='1', height='1')
    .navbar
      a(href='/workouts')
        img(src='public/resources/imgs/workouticon.png')
    .banner
      h1#bannertext BARE MINIMUM
    svg#donation(onclick='handleclick()')
      circle(cx='125', cy='125',r='120', fill='white', stroke='black')
      text(x='50', y='140' ) DONATION
    #guide
      h3#guidetitle Functional Fitness Guide
      a(href='https://drive.google.com/file/d/16R4Innqi2y1RwEpAHBlA0Ae9m4Iml36O/view?usp=sharing')
        img#cover(src='public/resources/imgs/BM-bookCoverAlt.png')
