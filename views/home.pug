    .groupout
      h3#bannertext RSVP FOR GROUPOUT
      img#gad(src='public/resources/imgs/BMGW01.png')
      form#rsvp(action='rsvp', method='post')
        label Name
        br
        input(type='text', name='bmer', required)
        br
        label Email
        br
        input(type='email', name='email', required)
        br
        label Instagram 
        br
        input(type='text', name='insta')
        br
        label Tell me about yourself...
        br
        textarea(type='text', name='bio', resize='none', placeholder='My fitness goals are..')
        br
        button(type='submit') RSVP
